<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/avatar_box"
                android:padding="2dp"
        >
    <ImageView
            android:id="@+id/avatar_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/avatar_camera"
            android:scaleType="fitXY"
            android:layout_centerInParent="true"
            android:visibility="visible"
            />
    <TextView
            android:id="@+id/avatar_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:ellipsize="end"
            android:background="#6999"
            android:textColor="#FFF"
            android:textSize="18dp"
            android:text="@string/avatarname"
            android:visibility="visible"
            />

    <!-- when avatar is being dialled -->
    <ImageView
            android:id="@+id/calling_icon"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ugly2_round"
            android:visibility="gone"
            />
    <TextView
        android:id="@+id/calling_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/calling_icon"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:textColor="#999"
        android:layout_marginTop="10dp"
        android:text="@string/calling"
        android:visibility="gone"
        />


</RelativeLayout>
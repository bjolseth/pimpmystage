<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/stage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EEE"
        >

    <AbsoluteLayout
            android:id="@+id/exp_screen"
            android:layout_width="1067dp"
            android:layout_height="600dp"
            android:background="#F5F5F5"
            android:layout_centerInParent="true"
            >
            <TextView android:layout_width="300dp" android:layout_height="300dp"
                  android:id="@+id/ghost"
                  android:layout_y="50dp"
                  android:layout_x="50dp"
                  android:background="#7900"
                />
            <TextView android:layout_width="300dp" android:layout_height="300dp"
                    android:id="@+id/exp_box"
                    android:layout_y="50dp"
                    android:layout_x="50dp"
                    android:background="#7090"
                    />

        <ImageView android:layout_width="match_parent" android:layout_height="match_parent"
            android:id="@+id/photo"
                   android:src="@drawable/team_photo"/>

    </AbsoluteLayout>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/garbagecan"
            android:text="@string/garbagecan"
            android:layout_below="@id/exp_screen"
            android:layout_centerHorizontal="true"
            />

</RelativeLayout>
